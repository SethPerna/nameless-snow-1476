<h3>Name: <%= @mechanic.name %></h3>
<p>Experience: <%= @mechanic.years_experience %></p>
<p>Rides: <% @mechanic.rides.thrill_order.each do |ride| %>
  <% if ride.open == true %>
    <%= ride.name %>
  <% end %>
<% end %>
</p>
<p>Add Ride to workload</p>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
<%= f.label :ride_id %>
<%= f.text_field :ride_id %>
<%= f.submit "Add Ride" %>
<% end %>
